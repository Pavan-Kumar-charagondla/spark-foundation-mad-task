<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:text="welcome to Basic Banking App"
        android:textAllCaps="true"
        android:textColor="#FDFDFD"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="visible"
         />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="222dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="->By clicking the transfer button you will Transfer Money from one customer to anthoer customer"
        android:textColor="#FDFDFD"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="286dp"

        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="->By clicking the view button you can see all customer acc balances"
        android:textColor="#FDFDFD"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button1"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginBottom="167dp"
        android:background="@drawable/border"

        android:text="Transfer Money"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button2"
        android:layout_width="193dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:layout_x="15dp"
        android:layout_y="268dp"
        android:background="@drawable/border"

        android:text="View Customers"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="italic" />


</RelativeLayout>